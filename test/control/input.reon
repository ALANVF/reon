as-block: macro [values][
	res: copy []

	foreach value values [
		append res value
	]

	res
]
as-block-2: macro [values][
	res: copy []

	foreach [value1 value2] values [
		append res value1
		append res value2
	]

	res
]
as-block-3: macro [values][
	res: copy []

	foreach [value1 value2] values [
		append res value1
		if not same? value2 none [
			append res value2
		]
	]

	res
]

